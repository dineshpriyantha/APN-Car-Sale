@*Create A PopUp Modal For DeleteConfirmation*@

<div class="modal fade" id="DeleteConfirmation">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4>Delete Student Record</h4>
            </div>
            <div class="modal-body">
                <h4>Are You Sure? You Want To Delete This Record.</h4>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-primary" data-dismiss="modal" id="r">Cancle</a>
                <a href="#" class="btn btn-danger" onclick="ConfirmDelete()">Confirm</a>
            </div>
        </div>
    </div>
</div>
<script>
    $("#LoadingStatus").html("Loading....");
    $.get("/Admin/GetCategory", null, DataBind);
    function DataBind(StudentList) {
       //This Code For Receive All Data From Controller And Show It In Client Side
        var SetData = $("#SetStudentList");
        for (var i = 0; i < StudentList.length; i++) {
            var Data = "<tr class='row_" + StudentList[i].id + " searchItem'>" +
                "<td>" + StudentList[i].name + "</td>" +
                "<td>" + StudentList[i].description + "</td>" +
                "<td>" + "<a href='#' class='btn btn-warning' onclick='EditStudentRecord(" + StudentList[i].id + ")' ><span class='glyphicon glyphicon-edit'></span></a>" + "</td>" +
                "<td>" + "<a href='#' class='btn btn-danger' onclick='DeleteStudentRecord(" + StudentList[i].id + ")'><span class='glyphicon glyphicon-trash'></span></a>" + "</td>" +
                "</tr>";
            SetData.append(Data);
            $("#LoadingStatus").html(" ");

        }
    }


    //Show The Popup Modal For Add New Student

    function AddNewStudent(StudentId) {
        $("#form")[0].reset();
        $("#StuId").val(0);
        $("#ModalTitle").html("Add New Student");
        $("#MyModal").modal();
    }

    $("#SaveStudentRecord").click(function () {
        var id = $("#StuId").val();
        var data = $("#SubmitForm").serialize();
        if (id > 0) {
            $.ajax({
                type: "Post",
                url: "/Admin/Update",
                data: data,
                success: function (result) {
                    alert("Updated..");
                    window.location.href = "/Admin/index";
                    $("#MyModel").modal("hide");
                }
            })
        }
        else {
            $.ajax({
                type: "Post",
                url: "/Admin/Create",
                data: data,
                success: function (result) {
                    alert("Success!..");
                    window.location.href = "/Admin/index";
                    $("#MyModal").modal("hide");

                }
            })
        }
    })

    //Show The Popup Modal For Edit Student Record

    function EditStudentRecord(id) {
        var url = "/Admin/GetCategoryById?id=" + id;
        $("#ModalTitle").html("Update Student Record");
        $("#MyModal").modal();
        $.ajax({
            type: "GET",
            url: url,
            success: function (data) {

                var obj = JSON.parse(JSON.stringify(data));
                $("#StuId").val(obj.id);
                $("#StuName").val(obj.name);
                $("#Email").val(obj.description);

            }
        })
    }
    //Show The Popup Modal For DeleteComfirmation
    var DeleteStudentRecord = function (StudentId) {
        $("#StuId").val(StudentId);
        $("#DeleteConfirmation").modal("show");
    }
    var ConfirmDelete = function () {
        var StuId = $("#StuId").val();
        $.ajax({
            type: "POST",
            url: "/Admin/DeleteCategoryRecord?id=" + StuId,
            success: function (result) {
                $("#DeleteConfirmation").modal("hide");
                $(".row_" + StuId).remove();
            }
        })
    }

</script>